<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp">

        <ImageView
            android:id="@+id/image_avatar_default"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_item_message"
            android:scaleType="center"
            android:src="@drawable/ic_avatar_user_default_white_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="visible"
            android:scaleType="centerCrop"
            android:src="@color/gray_cancel_search_message"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/image_avatar"
            app:layout_constraintBottom_toBottomOf="@id/image_avatar"
            app:layout_constraintLeft_toRightOf="@id/image_avatar"
            android:layout_marginLeft="12dp"
            android:text="Dang Tan"
            android:textFontWeight="800"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        
        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toRightOf="@id/image_avatar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_avatar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>