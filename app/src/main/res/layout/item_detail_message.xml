<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <View
            android:id="@+id/view_space"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/tv_u_send"
            app:layout_constraintTop_toTopOf="parent"/>
        
        <TextView
            android:id="@+id/tv_me_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="15dp"
            android:visibility="gone"
            android:fontFamily="@font/lato"
            app:layout_constraintWidth_percent="0.75"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_space"
            app:layout_constraintBottom_toTopOf="@id/tv_time_me_send"
            android:background="@drawable/bg_item_me_send_single"/>

        <TextView
            android:id="@+id/tv_time_me_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_me_send"
            app:layout_constraintRight_toRightOf="@id/tv_me_send"
            android:textColor="#999999"/>

        <ImageView
            android:id="@+id/img_user_send_default"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_avatar_user_default_white_icon"
            android:background="@drawable/bg_item_message"
            android:scaleType="center"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/view_space"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_send"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_item_message"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/view_space"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tv_u_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="15dp"
            android:visibility="gone"
            android:fontFamily="@font/lato"
            app:layout_constraintWidth_percent="0.75"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_space"
            app:layout_constraintBottom_toTopOf="@id/tv_time_u_send"
            android:background="@drawable/bg_item_u_send_single"
            android:text="123 dslflskjd "/>

        <TextView
            android:id="@+id/tv_time_u_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:45"
            android:visibility="gone"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_u_send"
            app:layout_constraintLeft_toLeftOf="@id/tv_u_send"
            android:textColor="#999999"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>