<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp">

        <ImageView
            android:id="@+id/image_user_message_default"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/bg_item_message"
            android:scaleType="center"
            android:src="@drawable/ic_avatar_user_default_while_large_icon"
            app:layout_constraintBottom_toBottomOf="@+id/image_user_message"
            app:layout_constraintLeft_toLeftOf="@+id/image_user_message"
            app:layout_constraintRight_toRightOf="@+id/image_user_message"
            app:layout_constraintTop_toTopOf="@+id/image_user_message" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_user_message"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/bg_item_message"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_message"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_black"
            android:text="Hai Anh"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/image_user_message"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato"
            android:text="08:00"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_bold"
            android:text="Chao ban"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/image_user_message"
            app:layout_constraintTop_toBottomOf="@id/tv_name_user_message" />

        <ImageView
            android:id="@+id/img_badge_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_badge_red_large_icon"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_badge_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/img_badge_message"
            app:layout_constraintLeft_toLeftOf="@id/img_badge_message"
            app:layout_constraintRight_toRightOf="@id/img_badge_message"
            app:layout_constraintTop_toTopOf="@id/img_badge_message" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tv_name_user_message" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>