<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.message.MessageFragment">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidLine_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.28" />

        <View
            android:id="@+id/view_head"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_splash"
            app:layout_constraintBottom_toTopOf="@id/guidLine_head"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/label_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message"
            android:textFontWeight="700"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="21dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_add_message"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_image_add_message"
            android:scaleType="center"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_add_message_blue_icon"
            app:layout_constraintBottom_toBottomOf="@+id/label_message"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/label_message" />

        <EditText
            android:id="@+id/edt_search_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_image_add_message"
            android:drawableLeft="@drawable/ic_search_blue_icon"
            android:drawablePadding="12dp"
            android:hint="@string/find_message"
            android:paddingVertical="12dp"
            android:paddingRight="32dp"
            android:paddingLeft="12dp"
            android:maxLines="1"
            android:lines="1"
            android:layout_marginTop="24dp"
            android:textFontWeight="500"
            android:fontFamily="@font/lato"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_cancel"
            app:layout_constraintTop_toBottomOf="@id/label_message"/>

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility="invisible"
            android:src="@drawable/ic_delete_white_icon"
            android:background="@drawable/bg_cancel_search_message"
            android:scaleType="center"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toTopOf="@id/edt_search_message"
            app:layout_constraintBottom_toBottomOf="@id/edt_search_message"
            app:layout_constraintRight_toRightOf="@id/edt_search_message"/>


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:visibility="gone"
            android:fontFamily="@font/lato"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:paddingRight="12dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/edt_search_message"
            app:layout_constraintBottom_toBottomOf="@id/edt_search_message"
            app:layout_constraintTop_toTopOf="@id/edt_search_message"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/bg_rcv_message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edt_search_message"/>

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:visibility="gone"
            android:src="@drawable/ic_search_gray_icon"
            app:layout_constraintBottom_toTopOf="@id/tv_result"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/view"
            app:layout_constraintBottom_toBottomOf="@id/view"
            android:text="@string/result_search_message"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:fontFamily="@font/lato"
            android:textFontWeight="700"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_label_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/view"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="26dp"
            android:textSize="14dp"
            android:visibility="gone"
            android:textFontWeight="800"
            android:textAllCaps="true"
            android:text="@string/message"
            android:fontFamily="@font/lato"
            android:textColor="@color/gray_cancel_search_message"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_search_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_rcv_message"
            android:paddingHorizontal="12dp"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="@id/view"
            app:layout_constraintLeft_toLeftOf="@id/view"
            app:layout_constraintRight_toRightOf="@id/view"
            app:layout_constraintTop_toBottomOf="@id/tv_label_message" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_rcv_message"
            android:padding="12dp"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/view" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>