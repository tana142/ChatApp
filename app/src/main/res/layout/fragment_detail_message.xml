<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_detail_message"
        tools:context=".view.fragment.message.DetailMessageFragment">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_left_blue_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/img_user_message_default"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/bg_item_message"
            android:src="@drawable/ic_avatar_user_default_while_large_icon"
            android:scaleType="center"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@id/img_user_message"
            app:layout_constraintBottom_toBottomOf="@id/img_user_message"
            app:layout_constraintRight_toRightOf="@+id/img_user_message"
            app:layout_constraintLeft_toLeftOf="@+id/img_user_message"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_message"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:visibility="invisible"
            android:src="@drawable/ic_avatar_user_default_while_large_icon"
            android:scaleType="centerCrop"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@id/img_back"
            app:layout_constraintBottom_toBottomOf="@id/img_back"
            app:layout_constraintLeft_toRightOf="@id/img_back"/>

        <TextView
            android:id="@+id/tv_name_user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/img_user_message"
            app:layout_constraintBottom_toBottomOf="@id/img_user_message"
            app:layout_constraintLeft_toRightOf="@id/img_user_message" />

        <View
            android:id="@+id/view_detail_message"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/bg_rcv_message"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_back"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_detail_message"
            android:fontFamily="@font/lato"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingBottom="6dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/view_detail_message"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_detail_message" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_detail_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/edt_message"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_detail_message" />

        <ImageView
            android:id="@+id/img_photo_local"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_photo_local_gray_icon"
            android:background="@drawable/bg_detail_message"
            android:scaleType="center"
            app:layout_constraintTop_toTopOf="@id/edt_message"
            app:layout_constraintBottom_toBottomOf="@id/edt_message"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/edt_message"/>

        <androidx.emoji2.widget.EmojiEditText
            android:id="@+id/edt_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_detail_message"
            android:fontFamily="@font/lato"
            android:hint="Nhap tin nhan..."
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="16sp"
            android:textFontWeight="500"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/rcv_detail_message"
            app:layout_constraintLeft_toRightOf="@id/img_photo_local"
            app:layout_constraintRight_toLeftOf="@+id/img_send" />

        <ImageView
            android:id="@+id/img_send"
            android:layout_width="46dp"
            android:layout_height="52dp"
            android:scaleType="center"
            android:visibility="gone"
            android:src="@drawable/ic_send_blue_icon"
            app:layout_constraintLeft_toRightOf="@id/edt_message"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/edt_message"
            app:layout_constraintBottom_toBottomOf="@id/edt_message"/>

        <ImageView
            android:id="@+id/image_emoji"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:scaleType="center"
            android:src="@drawable/ic_emoji_gray_icon"
            app:layout_constraintTop_toTopOf="@id/edt_message"
            app:layout_constraintBottom_toBottomOf="@id/edt_message"
            app:layout_constraintRight_toRightOf="@id/edt_message"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>